const int ldrPin = 34;   // Пін для датчика освітленості

int ldrValue = 0;         // Значення освітленості

void setup() {
  Serial.begin(9600);      // Ініціалізація серійного порту
  pinMode(ldrPin, INPUT);  // Пін для LDR як вхід
}

void loop() {
  // Зчитуємо значення з датчика освітленості
  ldrValue = analogRead(ldrPin);

  // Виводимо значення на серійний монітор
  Serial.print("Освітленість: ");
  Serial.println(ldrValue);

  // Аналіз рівня освітленості
  if (ldrValue < 300) {
    Serial.println(" Рекомендація: Освітлення низьке. Використовуйте додаткове освітлення.");
  } else if (ldrValue > 700) {
    Serial.println(" Рекомендація: Освітлення достатнє. Не потребує додаткового освітлення.");
  } else {
    Serial.println(" Освітлення в межах норми.");
  }

  delay(2000); // Затримка 2 секунди перед наступним вимірюванням
}
